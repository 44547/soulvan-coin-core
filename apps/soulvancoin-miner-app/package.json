{
  "name": "soulvancoin-miner-app",
  "version": "1.0.0",
  "description": "Soulvan Coin Miner - Electron Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "jest",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "lint": "eslint ."
  },
  "keywords": [
    "soulvancoin",
    "miner",
    "electron",
    "cryptocurrency"
  ],
  "author": "Soulvan Coin Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.50.0",
    "jest": "^29.7.0"
  },
  "dependencies": {},
  "build": {
    "appId": "com.soulvancoin.miner",
    "productName": "Soulvan Miner",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "certificateFile": "${WIN_CSC_LINK}",
      "certificatePassword": "${WIN_CSC_KEY_PASSWORD}"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "identity": "${APPLE_IDENTITY}"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
